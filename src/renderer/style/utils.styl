// 全局工具类样式

common-horizen-border(deg)
  background-image linear-gradient(deg, $border, $border 50%, transparent 0)
  background-origin border-box
  background-size 120% 1px
  background-repeat no-repeat
  background-position bottom left

common-verticle-border(deg)
  background-image linear-gradient(deg, $border, $border 50%, transparent 0)
  background-origin border-box
  background-size 1px 120%
  background-repeat no-repeat
  background-position right top

common-border(deg)
  content ' '
  position absolute
  left 0
  width 100%
  height 1px
  background-position bottom left !important
  z-index 0
  common-horizen-border(deg)

common-border-vertivcle(deg)
  content ' '
  position absolute
  width 1px
  height 120%
  background-position right center !important
  z-index 0
  common-verticle-border(deg)

